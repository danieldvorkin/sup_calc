<% if @order.errors.any? || @order_item.errors.any? %>
alert("not valid.")
<% else %>
  $(".cart-text").html("<%= j render 'layouts/cart' %>")
  $('.mobile-cart-label').text("<%= current_order.order_items.size %> Items in Cart");
  
  $("#prod_<%= current_order.order_items.last.product.id %> form .green").hide();
  $("#prod_<%= current_order.order_items.last.product.id %> form .red").show();
  $("#prod_<%= current_order.order_items.last.product.id %> form .red").attr('href', "order_items/<%= current_order.order_items.last.id %>")

<% end %>
