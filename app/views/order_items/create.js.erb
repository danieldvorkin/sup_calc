<% if @order.errors.any? || @order_item.errors.any? %>
  alert("not valid.")
<% else %>
  $(".cart-text").html("<%= j render 'layouts/cart' %>")
  $('.mobile-cart-label').text("<%= current_order.order_items.size %> Items in Cart");

  $("#prod_<%= current_order.order_items.last.product.dataId %> form .green").css('visibility', 'hidden');
  $("#prod_<%= current_order.order_items.last.product.dataId %> form .red").css('visibility', 'visible');
  $("#prod_<%= current_order.order_items.last.product.dataId %> form .red").attr('href', "/order_items/<%= current_order.order_items.last.id %>")

<% end %>
