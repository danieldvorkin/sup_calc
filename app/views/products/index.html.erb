<h3>DropList</h3><br/>
<ul class="collapsible popout" data-collapsible="accordion">
  <% @data.each_with_index do |d, index| %>
    <li>
      <div class="collapsible-header <%= index == 0 ? 'active' : '' %>">Week <%= WelcomeHelper.main_label(d) %></div>
      <div class="collapsible-body">
        <div class="row">
          <% d[1].reverse.each do |prod| %>
            <div class="col s6 m4 l4">
              <img class="product-imgs" src="http://supremecommunity.com/<%= prod[:link] %>"/>
              <div class="row">
                <div class="col s4 m4 l4">
                  <a href="#modal-<%= prod[:name] %>" class="waves-effect waves-light modal-trigger">
                    <span class="new badge blue" data-badge-caption="">View</span>
                  </a>
                </div>
                <div class="col s4 m4 l4">
                  <span class="new badge red" data-badge-caption=""><%= WelcomeHelper.price_badge(prod[:price]) %></span>
                </div>
                <%= form_for @order_item, remote: true do |f| %>
                  <div class="col s4 m4 l4">
                    <%= f.hidden_field :quantity, value: 1, class: "form-control", min: 1 %>
                    <%= f.hidden_field :product_id, value: prod[:id] %>
                    <%= f.submit "Add", class: "new badge green", style: 'text-decoration: none !important;color: white !important;' %>
                  </div>
                <% end %>
              </div>
            </div>
            <div id="modal-<%= prod[:name] %>" class="modal">
              <div class="modal-content">
                <h4><%= prod[:title] %></h4>
                <img class="product-imgs" style="height:400px !important" src="http://supremecommunity.com/<%= prod[:link] %>"/>
                <%= WelcomeHelper.price_badge(prod[:price]) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ul>

<script>
$(document).ready(function(){
   $('.modal').modal();
   $('.addToCart').click(function(e){
     e.preventDefault();
     alert("Feature coming soon....");
   });
 });
</script>